<div class="ui centered grid">
  <h2 class="computer only row">生徒用ログイン</h2>
<%= form_with url: student_login_path do |f| %>
  <h3>名前</h3>
  <div class="ui form computer only row">
    <%= f.text_field :username %>
  </div>
  <h3>パスワード</h3>
  <div class="ui form computer only row">
    <%= f.password_field :password %>
  </div>
  <div class="ui computer only row">
    <%= f.submit "ログイン", class: "ui button",style: "margin:30px" %>
  </div>
<% end %>
</div>