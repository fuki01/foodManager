<meta name="turbolinks-cache-control" content="no-preview">
<%= stylesheet_link_tag "dailies"%>
<%= javascript_pack_tag 'dailies/stamp', defer: true %>

<div id="main-body">
<div id="load_id">
loading...(ロードが長い場合は、このページを再読み込みしてください)
</div>
<canvas id="canvas"></canvas>
<%# 保存する %>
<button class="ui primary button">save</button>
<p>スタンプのプレビュー</p>
<canvas id="stamp_viewr" width="500px" height="500px"></canvas>

<%# ラジオボタンを追加する %>
<div class="ui form">
  <div class="grouped fields">
    <label>スタンプの形</label>
    <div class="field">
      <div class="ui radio checkbox">
        <input type="radio" id="stamp1" name="stamp" value="1">
        <label for="scales">まる</label>
      </div>
    </div>
    <div class="field">
      <div class="ui radio checkbox">
        <input type="radio" id="stamp2" name="stamp" value="2">
        <label for="scales">三角</label>
      </div>
    </div>
    <div class="field">
      <div class="ui radio checkbox">
        <input type="radio" id="stamp3" name="stamp" value="3">
        <label for="scales">ばつ</label>
      </div>
    </div>
  </div>
</div>
<%# サイズ変更 %>
<div class="ui form">
  <div class="field">
    <label>スタンプのサイズ</label>
    <input type="range" name="size" id="stamp_size" min="1" max="100" value="100">
  </div>
</div>
<%# カラーピッカー %>
<div class="ui form">
  <div class="field">
    <label>コメントの色</label>
    <input type="color" name="color">
  </div>
</div>
<%# テキストエリア %>
<div class="ui form">
  <div class="field">
    <label>コメント</label>
    <textarea name="textarea" id="context" rows="4" cols="40"></textarea>
  </div>
</div>

<%# @daily.imageを非表示labelにする %>
<div id="image_path"><%= @daily.image %></div>
</div>

<input id="daily_id" type="hidden" value=<%= @daily.id %>>
<%= image_tag @daily.image, id: "daily_image" %>

<%= form_with url: dailies_path do |f| %>
      <%= f.text_field :context, id: "hide" %>
      <%= f.file_field :image, id: "hide" %>
      <%= f.submit "登録",id: "hide" %>
<% end %>

<style>
  #hide{
    display: none;
  }
  #image_path{
    display: none;
  }
  #stamp_viewr {
    border: 1px solid black;
  }
  #daily_image {
    /* 非表示 */
    display: none;
  }
</style>